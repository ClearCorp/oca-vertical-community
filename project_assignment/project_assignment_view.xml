<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_project_assigned_user_config_tree" model="ir.ui.view">
            <field name="name">project.assigned.user.config.tree</field>
            <field name="model">project.assigned.user.config</field>
            <field name="arch" type="xml">
                <tree string="Assigned Users" editable="top">
                    <field name="stage_id"/>
                    <field name="user_id"/>
                    <field name="action"/>
                    <field name="model" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_project_assigned_user_config_form" model="ir.ui.view">
            <field name="name">project.assigned.user.config.form</field>
            <field name="model">project.assigned.user.config</field>
            <field name="arch" type="xml">
                <form string="Assigned User">
                    <field name="stage_id"/>
                    <field name="user_id"/>
                    <field name="action"/>
                    <field name="model" invisible="1"/>
                </form>
            </field>
        </record>


        <record id="view_project_project_form_assignuser" model="ir.ui.view">
            <field name="name">project.project.form.assignuser</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="type_ids" position="after">
                    <group>
                        <field name="assigned_user_config_ids" context="{'default_model': 'project.project'}"/>
                        <field name="assigned_user_config_result_ids"/>
                    </group>
                </field>
            </field>
        </record>

        <record id="view_project_task_form_assignuser" model="ir.ui.view">
            <field name="name">project.task.form.assignuser</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <page string="Extra Info" position="after">
                    <page string="Assign User">
                        <group>
                            <field name="assigned_user_config_ids" context="{'default_model': 'project.task'}"/>
                            <field name="assigned_user_config_result_ids"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_project_task_type_form_assignuser" model="ir.ui.view">
            <field name="name">project.task.type.form.assignuser</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="user_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
