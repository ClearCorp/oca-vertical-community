<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_mail_group_form_group_management" model="ir.ui.view">
            <field name="name">mail.group.form.group.management</field>
            <field name="model">mail.group</field>
            <field name="inherit_id" ref="mail.view_group_form"/>
            <field name="arch" type="xml">
                <field name="group_public_id" position="attributes">
                    <attribute name="groups">base.group_erp_manager</attribute>
                </field>
                <field name="group_ids" position="attributes">
                    <attribute name="groups">base.group_erp_manager</attribute>
                </field>
                <sheet position="inside">
                    <group>
                        <field name="manager_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </field>
        </record>

    </data>
</openerp>
